                <!--                 <Style TargetType="ComboBox"> -->
                <!--                     <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.Titles}"/> -->
                <!--                     <Setter Property="DisplayMemberPath" Value="TitleText" /> -->
                <!--                 </Style> -->
                <!--             </DataGridComboBoxColumn.EditingElementStyle> -->
                <!--         </DataGridComboBoxColumn> -->
                <!--     </DataGrid.Columns> -->
                <!-- </DataGrid> -->
                
            </DataGrid>
            <!-- <DataGrid ItemsSource="{Binding Adresses}"> -->
            <!--     <DataGrid.Resources> -->
            <!--         <DataTemplate x:Key="CompanyDisplayTemplate" DataType="models:Adresse"> -->
            <!--             <TextBlock Text="{Binding AdresseId}" /> -->
