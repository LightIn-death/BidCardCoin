            <StackPanel>
                <Button Style="{DynamicResource ButtonInvisible}" Click="AddUser" VerticalAlignment="Center"
                        Margin="15">
                    <Border CornerRadius="15" Width="150" Background="#3E3E42" VerticalAlignment="Center">
                        <TextBlock FontSize="25" Foreground="#249181" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            Ajouter
                        </TextBlock>
                    </Border>

                </Button>
                <Button Style="{DynamicResource ButtonInvisible}" Click="DeleteUser" Margin="15">
                    <Border CornerRadius="15" Width="150" Background="#3E3E42">
                        <TextBlock FontSize="25" Foreground="#DE4F4E" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            supprimer
                        </TextBlock>
                    </Border>
                </Button>


                <Button Name="selectMode" Style="{DynamicResource ButtonInvisible}" Click="SelectUser" Margin="15">
                    <Border CornerRadius="15" Width="150" Background="#3E3E42">
                        <TextBlock FontSize="25" Foreground="#007ACC" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            Selectioner
                        </TextBlock>
                    </Border>
                </Button>
                
                <Button Name="EditMode" Style="{DynamicResource ButtonInvisible}" Click="SelectUser" Margin="15">
                    <Border CornerRadius="15" Width="150" Background="#3E3E42">
                        <TextBlock FontSize="25" Foreground="#007ACC" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            Selectioner
                        </TextBlock>
                    </Border>
                </Button>
            </StackPanel>


        </DockPanel>

    </Grid>

</UserControl>